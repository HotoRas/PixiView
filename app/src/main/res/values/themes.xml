<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.PixiView" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.PixiView" parent="NightAdjusted.Theme.PixiView">
        <item name="android:statusBarColor">#000</item>
    </style>

    <!-- The final theme we use -->
    <style name="Theme.PixiView" parent="PlatformAdjusted.Theme.PixiView" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.PixiView.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="postSplashScreenTheme">@style/Theme.PixiView</item>
    </style>

</resources>
